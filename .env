# Deployment Configuration
PORT=5000
SECRET_KEY=video_anomaly_detection_secret_key_change_in_production
FLASK_ENV=development

# Gemini API Configuration
GEMINI_API_KEY=["Ur Api KEY"]
GEMINI_MODEL=gemini-2.0-flash

# Video Analysis Settings
ANALYSIS_INTERVAL=5
FRAME_QUALITY=75

# Alert Thresholds
HIGH_PRIORITY_THRESHOLD=3
CONFIDENCE_THRESHOLD=0.7

# Output Settings
SAVE_ALERTS_TO_FILE=true
API_ENDPOINT=http://localhost:3000/api/anomalies

# Event-Specific Settings (customize for your event)
EVENT_TYPE=large_scale_event
VENUE_CAPACITY=10000
SECURITY_LEVEL=high